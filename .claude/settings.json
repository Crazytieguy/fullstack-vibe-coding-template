{
  "permissions": {
    "allow": [
      "WebFetch(domain:daisyui.com)",
      "WebFetch(domain:docs.convex.dev)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:zod.dev)",
      "WebFetch(domain:clerk.com)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm lint)",
      "Bash(pnpm dev)",
      "Bash(pnpx convex run:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "mcp__ide__getDiagnostics",
      "mcp__playwright"
    ],
    "deny": []
  },
  "enabledMcpjsonServers": ["playwright"],
  "enableAllProjectMcpServers": true,
    "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && if [ -n \"$(git status --porcelain 2>/dev/null)\" ]; then (echo '=== Automatic reminder (uncommitted work) ==='; git status --short; echo 'CLAUDE.md has guidance for git usage :D') >&2; exit 2; fi"
          }
        ]
      }
    ]
  }
}
